<?php

$job=$model->getJobRes(array('schedule.job_id'=>$jobId));
$nn=0;
$fontsize=15 - ($rowCount/6);
$sum=0;
$total_count=0;
  foreach($job as $r){
  	$count=$r->count;
	$sc_id=$r->ID;
  	$total=$model->get_total_contents(array('schedule.ID'=>$r->ID));
  	$sum += $total;
  	$total_count += $count;
